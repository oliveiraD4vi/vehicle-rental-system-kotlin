<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="32dp"
        android:paddingTop="32dp"
        android:paddingRight="32dp"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/userIconImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_avatar" />

        <Button
            android:id="@+id/editButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="Editar" />

        <!-- Informações pessoais -->
        <GridLayout
            android:id="@+id/personal_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:columnCount="2"
            android:rowCount="5"
            android:useDefaultMargins="false">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:src="@drawable/ic_pencil" />

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginBottom="4dp"
                android:background="@drawable/edittext_drawable"
                android:maxWidth="488dp"
                android:minHeight="48dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:textColor="@color/blue_primary" />

            <ImageView
                android:layout_width="56dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:src="@drawable/ic_phone" />

            <EditText
                android:id="@+id/phoneEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginBottom="4dp"
                android:background="@drawable/edittext_drawable"
                android:maxWidth="488dp"
                android:minHeight="48dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:textColor="@color/blue_primary" />

            <ImageView
                android:layout_width="56dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:src="@drawable/ic_mail" />

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginBottom="4dp"
                android:background="@drawable/edittext_drawable"
                android:maxWidth="488dp"
                android:minHeight="48dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:textColor="@color/blue_primary" />

            <ImageView
                android:layout_width="56dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:src="@drawable/ic_hash" />

            <EditText
                android:id="@+id/cpfEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginBottom="4dp"
                android:background="@drawable/edittext_drawable"
                android:maxWidth="488dp"
                android:minHeight="48dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:textColor="@color/blue_primary" />

            <ImageView
                android:layout_width="56dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:src="@drawable/ic_calendar" />

            <EditText
                android:id="@+id/birthdateEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:background="@drawable/edittext_drawable"
                android:maxWidth="488dp"
                android:minHeight="48dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:textColor="@color/blue_primary" />

        </GridLayout>

        <!-- Endereço -->
        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:text="Endereço"
            android:textColor="@color/blue_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <GridLayout
            android:id="@+id/address_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="4"
            android:useDefaultMargins="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="4dp"
                android:text="Rua: "
                android:textColor="@color/blue_primary" />

            <EditText
                android:id="@+id/streetEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginBottom="4dp"
                android:background="@drawable/edittext_drawable"
                android:maxWidth="488dp"
                android:minHeight="48dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:textColor="@color/blue_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="4dp"
                android:text="Num: "
                android:textColor="@color/blue_primary" />

            <EditText
                android:id="@+id/numberEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginBottom="4dp"
                android:background="@drawable/edittext_drawable"
                android:maxWidth="488dp"
                android:minHeight="48dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:textColor="@color/blue_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="4dp"
                android:text="Cidade: "
                android:textColor="@color/blue_primary" />

            <EditText
                android:id="@+id/cityEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginBottom="4dp"
                android:background="@drawable/edittext_drawable"
                android:maxWidth="488dp"
                android:minHeight="48dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:textColor="@color/blue_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="4dp"
                android:text="Bairro: "
                android:textColor="@color/blue_primary" />

            <EditText
                android:id="@+id/neighborhoodEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginBottom="4dp"
                android:background="@drawable/edittext_drawable"
                android:maxWidth="488dp"
                android:minHeight="48dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:textColor="@color/blue_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="4dp"
                android:text="Estado: "
                android:textColor="@color/blue_primary" />

            <EditText
                android:id="@+id/stateEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginBottom="4dp"
                android:background="@drawable/edittext_drawable"
                android:maxWidth="488dp"
                android:minHeight="48dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:textColor="@color/blue_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="4dp"
                android:text="País: "
                android:textColor="@color/blue_primary" />

            <EditText
                android:id="@+id/countryEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginBottom="4dp"
                android:background="@drawable/edittext_drawable"
                android:maxWidth="488dp"
                android:minHeight="48dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:textColor="@color/blue_primary" />

        </GridLayout>

        <!-- Mensagem de não logado -->
        <TextView
            android:id="@+id/notLoggedInTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:text="Olá! Entre na sua conta"
            android:textColor="@color/blue_primary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="Entrar" />

        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="Salvar"
            android:visibility="gone" />

        <Button
            android:id="@+id/button_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@android:color/transparent"
            android:outlineAmbientShadowColor="@android:color/transparent"
            android:outlineSpotShadowColor="@android:color/transparent"
            android:shadowColor="@android:color/transparent"
            android:text="Sair"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/blue_primary"
            android:textSize="16dp" />

        <Button
            android:id="@+id/signUpButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@android:color/transparent"
            android:outlineAmbientShadowColor="@android:color/transparent"
            android:outlineSpotShadowColor="@android:color/transparent"
            android:shadowColor="@android:color/transparent"
            android:text="Cadastre-se"
            android:textColor="@color/blue_primary"
            android:textSize="12sp"
            android:visibility="gone" />

        <!-- Barra de Progresso -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="64dp"
            android:indeterminateTint="@color/yellow_primary"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>
